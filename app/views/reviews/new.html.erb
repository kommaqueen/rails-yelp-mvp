<div class="container">
  <h1>Add a Review for <%= @restaurant.name %></h1>
  <%= simple_form_for([@restaurant, @review] ) do |r| %>
    <%= r.input :content %>
    <%= r.input :rating %>

    <%= r.submit %>
  <% end %>
  <%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant) %>
</div>
